openapi: 3.0.1
info:
  title: Microsoft Bookings (Graph Custom Connector)
  version: 1.0.4
  description: Power Automate custom connector for Microsoft Bookings via Microsoft Graph

servers:
  - url: https://graph.microsoft.com/v1.0

components:
  securitySchemes:
    oauth2:
      type: oauth2
      flows:
        authorizationCode:
          authorizationUrl: https://login.microsoftonline.com/common/oauth2/v2.0/authorize
          tokenUrl: https://login.microsoftonline.com/common/oauth2/v2.0/token
          scopes:
            https://graph.microsoft.com/.default: Microsoft Graph access

security:
  - oauth2:
      - https://graph.microsoft.com/.default

paths:

  /solutions/bookingBusinesses:
    get:
      operationId: ListBookingBusinesses
      summary: List booking calendars
      responses:
        '200':
          description: OK
          content:
            application/json:
              schema:
                type: object
                properties:
                  value:
                    type: array
                    items:
                      type: object
                      properties:
                        id:
                          type: string
                        displayName:
                          type: string

  /solutions/bookingBusinesses/{businessId}/services:
    get:
      operationId: ListBookingServices
      summary: List services for a calendar
      parameters:
        - name: businessId
          in: path
          required: true
          schema:
            type: string
          x-ms-dynamic-values:
            operationId: ListBookingBusinesses
            value-path: value
            value-title: displayName
      responses:
        '200':
          description: OK
          content:
            application/json:
              schema:
                type: object
                properties:
                  value:
                    type: array
                    items:
                      type: object
                      properties:
                        id:
                          type: string
                        displayName:
                          type: string

  /solutions/bookingBusinesses/{businessId}/appointments:
    post:
      operationId: CreateBookingAppointment
      summary: Create booking appointment
      parameters:
        - name: businessId
          in: path
          required: true
          schema:
            type: string
          x-ms-dynamic-values:
            operationId: ListBookingBusinesses
            value-path: value
            value-title: displayName

      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              required:
                - subject
                - serviceId
                - startDateTime
                - endDateTime
                - timeZone
                - customerName
                - customerEmailAddress
              properties:

                subject:
                  type: string
                  title: Subject
                  description: Title of the appointment

                serviceId:
                  type: string
                  title: Calendar / Service
                  description: Booking service
                  x-ms-dynamic-values:
                    operationId: ListBookingServices
                    value-path: value
                    value-title: displayName
                    parameters:
                      businessId:
                        parameter: businessId

                startDateTime:
                  type: string
                  format: date-time
                  title: Start time

                endDateTime:
                  type: string
                  format: date-time
                  title: End time

                timeZone:
                  type: string
                  title: Time zone
                  enum:
                    - Eastern Standard Time
                    - Central Standard Time
                    - Mountain Standard Time
                    - Pacific Standard Time

                customerName:
                  type: string
                  title: Full Name

                customerEmailAddress:
                  type: string
                  title: Employee Email

                body:
                  type: string
                  title: Body
                  description: Additional details for the appointment

                importance:
                  type: string
                  title: Importance
                  enum:
                    - low
                    - normal
                    - high

                isAllDay:
                  type: boolean
                  title: Is all day event?

                showAs:
                  type: string
                  title: Show as
                  enum:
                    - busy
                    - free
                    - oof

                reminderMinutesBeforeStart:
                  type: integer
                  title: Reminder
                  default: 1440

      responses:
        '201':
          description: Created
          content:
            application/json:
              schema:
                type: object
