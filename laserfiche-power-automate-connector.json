{
  "swagger": "2.0",
  "info": {
    "title": "Laserfiche Repository Connector (API Key)",
    "description": "Power Automate custom connector for Laserfiche Repository CRUD using API Key authentication",
    "version": "1.1.0"
  },
  "host": "api.laserfiche.com",
  "basePath": "/repository/v1",
  "schemes": [
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "securityDefinitions": {
    "ApiKeyAuth": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "security": [
    {
      "ApiKeyAuth": []
    }
  ],
  "paths": {
    "/Repositories": {
      "get": {
        "operationId": "GetRepositories",
        "summary": "Get Repositories",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/Repositories/{repoId}/Entries/{entryId}/children": {
      "get": {
        "operationId": "GetFolderContents",
        "summary": "Get Folder Contents",
        "parameters": [
          {
            "name": "repoId",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "entryId",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int32"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/Repositories/{repoId}/Entries": {
      "post": {
        "operationId": "CreateEntry",
        "summary": "Create Folder or Document",
        "parameters": [
          {
            "name": "repoId",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": [
                "name",
                "parentId",
                "entryType"
              ],
              "properties": {
                "name": {
                  "type": "string"
                },
                "parentId": {
                  "type": "integer",
                  "format": "int32"
                },
                "entryType": {
                  "type": "string",
                  "enum": [
                    "Folder",
                    "Document"
                  ]
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
    },
    "/Repositories/{repoId}/Entries/{entryId}/Import": {
      "post": {
        "operationId": "UploadDocument",
        "summary": "Upload Document Content",
        "consumes": [
          "multipart/form-data"
        ],
        "parameters": [
          {
            "name": "repoId",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "entryId",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int32"
          },
          {
            "name": "file",
            "in": "formData",
            "required": true,
            "type": "file"
          }
        ],
        "responses": {
          "200": {
            "description": "Uploaded"
          }
        }
      }
    },
    "/Repositories/{repoId}/Entries/{entryId}": {
      "delete": {
        "operationId": "DeleteEntry",
        "summary": "Delete Entry",
        "parameters": [
          {
            "name": "repoId",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "entryId",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int32"
          }
        ],
        "responses": {
          "204": {
            "description": "Deleted"
          }
        }
      }
    }
  }
}
